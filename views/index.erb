<!DOCTYPE html>
<html lang="en-US" >
<head>
  <title>File Based CMS</title>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/stylesheets/application.css">
  <script src="/javascripts/jquery-3.7.1.min.js"></script>
  <script src="/javascripts/application.js"></script>
</head>
<body>
<% if session[:message] %>
  <div id="error">
      <p><%= session.delete(:message) %></p>

    <script type="text/javascript">
      setTimeout(function() {
        document.getElementById('error').style.display = 'none';
      }, 3000);
    </script>
  </div>
<% end %>

  <div class="main">
    <h1>File Based CMS</h1>
      <ul>
        <% files.each do |file| %>
          <div class="file_name">
            <li>
              <a href="/<%= file %>"><%= file %></a>
              <div class="destructive-action">
                <a href="/<%= file %>/edit">Edit</a>
                <form class="delete" action="/<%= file %>/delete" method="post">
                  <button>Delete</button>
                </form>
              </div>
            </li>
          </div>
        <% end %>
      </ul>
  </div>

  <div class="footer">
    <div id="new_document">
      <a href="/new_document">New Document</a>
    </div>

    <% if !session[:username] %>
      <div id="signin">
        <a href="/users/signin">Sign in</a>
      </div>
    <% end %>
  </div>

  <% if session[:username] %>
    <form class="signedout" action="/users/signout" method="post">
      <p>Signed in as: <%= session[:username] %></p>
      <button type="submit">Sign out</button>
    </form>
  <% end %>


</body>
</html>